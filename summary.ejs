<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Summary</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
<body class="bg-light" data-flash="<%= message || '' %>">

<nav class="navbar navbar-expand-lg navbar-dark bg-success px-3">
  <div class="container-fluid">
    <a class="navbar-brand text-white" href="/index">üí∞ Budget Manager</a>

    <!-- Toggle button for mobile -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu"
      aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible menu -->
    <div class="collapse navbar-collapse" id="navbarMenu">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link text-white" href="/add">Add Expense</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/budget">Set Budget</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/summary">Summary</a>
        </li>
      </ul>

      <div class="d-flex">
        <a class="btn btn-danger ms-lg-2 mt-2 mt-lg-0" href="/logout">Logout</a>
      </div>
    </div>
  </div>
</nav>


<div class="container mt-4">
  <h3 class="mb-3">üìä Filter Summary</h3>
  <form method="GET" class="row g-3 mb-4">
    <div class="col-md-4">
      <label class="form-label">From Date</label>
      <input type="date" name="from" class="form-control" value="<%= filterFrom || '' %>">
    </div>
    <div class="col-md-4">
      <label class="form-label">To Date</label>
      <input type="date" name="to" class="form-control" value="<%= filterTo || '' %>">
    </div>
    <div class="col-md-4">
      <label class="form-label">Category</label>
      <select name="category" class="form-select">
        <option value="" <%= !filterCategory ? 'selected' : '' %>>All</option>
        <% ['Food','Transport','Utilities','Entertainment','Other'].forEach(cat => { %>
          <option value="<%= cat %>" <%= filterCategory === cat ? 'selected' : '' %>><%= cat %></option>
        <% }) %>
      </select>
    </div>
    <div class="col-12 d-flex gap-2">
      <button type="submit" class="btn btn-success w-100">Filter</button>
      <a href="/summary" class="btn btn-secondary w-100">Clear</a>
    </div>
  </form>

  <h4 class="mt-4">üóïÔ∏è Budgets by Month</h4>
  <table class="table table-bordered align-middle">
    <thead class="table-primary"><tr><th>Month</th><th>Budget (‚Ç§)</th><th>Action</th></tr></thead>
    <tbody>
      <% if (budgets.length > 0) { %>
        <% budgets.forEach(item => { %>
<tr>
  <td><%= item.month %></td>
  <td>
    <form method="POST" action="/budget/update" class="d-flex gap-2">
      <input type="hidden" name="month" value="<%= item.month %>">
      <input type="number" name="amount" class="form-control form-control-sm" step="0.01" value="<%= Number(item.amount).toFixed(2) %>" required>
      <button type="submit" class="btn btn-sm btn-warning">Update</button>
    </form>
  </td>
  <td>
<button class="btn btn-sm btn-danger" onclick="confirmBudgetDelete('<%= item.month %>')">Delete</button>

  </td>
</tr>

        <% }) %>
      <% } else { %>
        <tr><td colspan="3" class="text-center">No budgets set.</td></tr>
      <% } %>
    </tbody>
  </table>

  <div class="mt-4">
    <h5>üìå Net Total Expenses: <strong>‚Ç§<%= Number(totalExpense).toFixed(2) %></strong></h5>
    <% if (selectedBudgetAmount && selectedBudgetAmount > 0) {
      const percentageUsed = ((totalExpense / selectedBudgetAmount) * 100).toFixed(1);
      const remaining = (selectedBudgetAmount - totalExpense).toFixed(2);
      const isOverBudget = percentageUsed > 100;
    %>
      <p class="<%= isOverBudget ? 'text-danger fw-bold' : '' %>">
        Used <%= percentageUsed %>% of ‚Ç§<%= Number(selectedBudgetAmount).toFixed(2) %> budget.
        <% if (isOverBudget) { %> ‚ö†Ô∏è Over budget! <% } %>
      </p>
      <h6 class="<%= remaining < 0 ? 'text-danger fw-bold' : 'text-success fw-semibold' %>">üìâ Remaining Budget: ‚Ç§<%= remaining %></h6>
    <% } else if (filterFrom && filterTo) { %>
      <p class="text-muted">No budget set for this date range.</p>
    <% } %>
  </div>

  <h4 class="mt-5">üßæ Detailed Expenses</h4>
  <table class="table table-striped table-bordered">
    <thead class="table-info"><tr><th>Date</th><th>Category</th><th>Amount (‚Ç§)</th><th>Action</th></tr></thead>
    <tbody>
      <% if (detailedExpenses && detailedExpenses.length > 0) { %>
        <% detailedExpenses.forEach(item => { %>
          <tr>
            <td><%= item.date %></td>
            <td><%= item.category %></td>
            <td><%= Number(item.amount).toFixed(2) %></td>
            <td class="d-flex gap-2">
              <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#editModal-<%= item.id %>">Edit</button>
              <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete(<%= item.id %>)">Delete</button>
            </td>
          </tr>

          <!-- Edit Modal -->
          <div class="modal fade" id="editModal-<%= item.id %>" tabindex="-1" aria-labelledby="editModalLabel-<%= item.id %>" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <form method="POST" action="/expenses/edit">
                  <div class="modal-header bg-info text-white">
                    <h5 class="modal-title" id="editModalLabel-<%= item.id %>">Edit Expense</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                  </div>
                  <div class="modal-body">
                    <input type="hidden" name="id" value="<%= item.id %>">
                    <div class="mb-3">
                      <label class="form-label">Date</label>
                      <input type="date" name="date" class="form-control" value="<%= item.date %>" required>
                    </div>
                    <div class="mb-3">
                      <label class="form-label">Category</label>
                      <select name="category" class="form-select" required>
                        <% ['Food','Transport','Utilities','Entertainment','Other'].forEach(cat => { %>
                          <option value="<%= cat %>" <%= item.category === cat ? 'selected' : '' %>><%= cat %></option>
                        <% }) %>
                      </select>
                    </div>
                    <div class="mb-3">
                      <label class="form-label">Amount (‚Ç§)</label>
                      <input type="number" name="amount" class="form-control" step="0.01" value="<%= item.amount %>" required>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <tr><td colspan="4" class="text-center">No individual expenses found.</td></tr>
      <% } %>
    </tbody>
  </table>
</div>

<!-- Budget Delete Modal -->
<div class="modal fade" id="confirmBudgetDeleteModal" tabindex="-1" aria-labelledby="confirmBudgetDeleteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content shadow">
      <form method="POST" id="deleteBudgetForm">
        <input type="hidden" name="month" id="deleteBudgetMonth">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title">üóëÔ∏è Confirm Budget Deletion</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to delete the budget for <strong id="budgetMonthLabel"></strong>?
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">Yes, Delete</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>



<!-- Delete Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content shadow">
      <form method="POST" id="deleteForm">
        <input type="hidden" name="id" id="deleteExpenseId">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title">üóëÔ∏è Confirm Delete</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to delete this expense?
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">Yes, Delete</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function confirmDelete(id) {
    document.getElementById('deleteExpenseId').value = id;
    document.getElementById('deleteForm').action = `/expenses/delete/${id}`;
    const modal = new bootstrap.Modal(document.getElementById('confirmDeleteModal'));
    modal.show();
  }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/myjs.js"></script>
</body>
</html>
