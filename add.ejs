<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Expense</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>

<!-- Flash message used by JS -->
<body class="bg-light" data-flash="<%= message || '' %>">

<nav class="navbar navbar-expand-lg navbar-dark bg-success px-3">
  <div class="container-fluid">
    <a class="navbar-brand text-white" href="/index">ðŸ’° Budget Manager</a>

    <!-- Toggle button for mobile -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu"
      aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible menu -->
    <div class="collapse navbar-collapse" id="navbarMenu">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link text-white" href="/add">Add Expense</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/budget">Set Budget</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/summary">Summary</a>
        </li>
      </ul>

      <div class="d-flex">
        <a class="btn btn-danger ms-lg-2 mt-2 mt-lg-0" href="/logout">Logout</a>
      </div>
    </div>
  </div>
</nav>


  <div class="container mt-5">
    <h3 class="mb-4">âž• Add New Expense</h3>

    <form action="/expenses/add" method="POST" class="card p-4 shadow-sm">
      <div class="mb-3">
        <label for="amount" class="form-label">Amount (Pounds)</label>
        <div class="input-group">
          <span class="input-group-text">Â£</span>
          <input type="number" name="amount" id="amount" class="form-control" step="0.01" placeholder="e.g. 1000.00" required>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label">Category</label>
        <select name="category" class="form-select" required>
          <option>Food</option>
          <option>Transport</option>
          <option>Utilities</option>
          <option>Entertainment</option>
          <option>Other</option>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label">Description</label>
        <input type="text" name="description" class="form-control">
      </div>

<% const today = new Date().toISOString().split('T')[0]; %>
<div class="mb-3">
  <label class="form-label">Date</label>
  <input type="date" name="date" class="form-control" required value="<%= today %>">
</div>


      <button type="submit" class="btn btn-success w-100">Add Expense</button>
    </form>
  </div>

  <!-- Flash Modal -->
  <div class="modal fade" id="popupModal" tabindex="-1" aria-labelledby="popupTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content shadow">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title" id="popupTitle">ðŸ”” Notification</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="popupMessage">This is a message.</div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/myjs.js"></script>
</body>
</html>
